<Window x:Class="WpfVolumeSlider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfVolumeSlider"
        mc:Ignorable="d"
        Title="MainWindow" Height="203" Width="593" Background="White">
    <Grid Margin="0,0,0,-6" Background="#FF2EB1CE">
        <Label Content="Volume: " HorizontalAlignment="Center" Margin="0,145,0,0" VerticalAlignment="Top" FontSize="14" Width="62"/>
        <Slider x:Name="slide1"  TickFrequency="5" Minimum="0" Maximum="100" Value="0" IsSnapToTickEnabled="True" HorizontalAlignment="Center" Margin="0,79,0,0" VerticalAlignment="Top" Width="489" ValueChanged="slide1_ValueChanged"/>
        <Label x:Name="lblValue" Content="0" HorizontalAlignment="Left" Margin="318,145,0,0" VerticalAlignment="Top" FontSize="14"/>
    </Grid>
</Window>
