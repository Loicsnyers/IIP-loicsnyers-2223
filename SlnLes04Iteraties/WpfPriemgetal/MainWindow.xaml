<Window x:Class="WpfPriemgetal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPriemgetal"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="250">
    <Grid RenderTransformOrigin="1.668,0.633">
        <Label x:Name="title" Content="PRIEMGETAL" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <Button x:Name="btn" Content="CONTROLEER" HorizontalAlignment="Center" Margin="0,145,0,0" VerticalAlignment="Top" Height="40" Width="174" FontSize="16" FontWeight="Bold" Click="btn_Click"/>
        <Label x:Name="subtitle" Content="Getal:" HorizontalAlignment="Left" Margin="66,77,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="getal" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="45" Margin="125,81,0,0" Height="20"/>
        <Label x:Name="answer" Content="" HorizontalAlignment="Center" Margin="0,198,0,0" VerticalAlignment="Top" Width="220" FontWeight="DemiBold"/>

    </Grid>
</Window>
