<Window x:Class="WpfCompare.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCompare"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="listBox1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="40,35,500,250" SelectionChanged="listBox_SelectionChanged"/>
        <ListBox x:Name="listBox2" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="500,35,40,250" SelectionChanged="listBox_SelectionChanged"/>
        <TextBlock x:Name="TextBlock1" HorizontalAlignment="Left" Margin="25,198,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="175" Width="290"/>
        <TextBlock x:Name="TextBlock2" HorizontalAlignment="Left" Margin="485,198,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="175" Width="290"/>
        <Button x:Name="button" Content="Compare!" HorizontalAlignment="Center" Margin="0,353,0,0" VerticalAlignment="Top" Width="100" Height="40" RenderTransformOrigin="0.596,4.044" Click="Button_Click"/>

    </Grid>
</Window>
